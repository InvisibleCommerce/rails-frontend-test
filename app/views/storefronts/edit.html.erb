<div class="flex grow min-h-screen">
  <div class="w-72 bg-zinc-800"></div>
  <div class="flex flex-col w-full justify-between bg-zinc-100">
    <fieldset class="w-full px-6 py-4">
      <h1 class="font-bold text-4xl pb-4">Returns</h1>

      <div class="flex grow shrink max-w-[1108px] h-auto p-4 bg-white rounded-xl shadow justify-start items-start gap-10">
        <div class="max-w-[440px] h-20 flex-col justify-start items-start gap-2">
          <legend class="text-black text-xl font-bold">Return Reasons</legend>
          <div class="self-stretch text-zinc-800 text-sm font-normal">
            Add or edit return reasons you would like to show the customers during the return request process.
          </div>
        </div>

        <div class="grow shrink">
          <%= render "form", storefront: @storefront %>
        </div>
      </div>
    </fieldset>

    <div class="flex w-full h-20 pl-6 pr-4 py-4 bg-white shadow justify-between items-center">
      <div class="text-sm font-medium">
        Remember to save your changes before leaving this page
      </div>
      <input type="submit" value="Save" form="storefront_form"
             class="btn-primary w-20 h-12 px-6 py-3.5 bg-amber-400 rounded-lg text-black text-base font-bold">
    </div>
  </div>
</div>
