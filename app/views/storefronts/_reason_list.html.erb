<% @reasons.each do |r| %>
  <div data-controller="reason"
       data-reason-target="reasonListItem"
       class="flex w-full h-14 p-4 justify-start items-start items-center gap-6">
    <i class="fa-sharp fa-solid fa-grip-vertical text-zinc-300"></i>
    <div class="w-[463px] h-6 justify-start items-center gap-4 inline-flex">
      <%= button_tag type: 'button',
                     class: "visibility-toggle",
                     data: {
                       action: "click->reason#updateVisibility",
                       reason_target: "visibilityButton",
                       reason_id: r.code
                     } do %>
        <div class=<%= r.active ? '' : 'hidden' %>>
          <%= render partial: 'shared/eye' %>
        </div>
        <div class=<%= r.active ? 'hidden' : '' %>>
          <%= render partial: 'shared/eye_slash' %>
        </div>
      <% end %>
      <div class="grow shrink basis-0 text-base font-semibold <%=r.active ? 'text-zinc-800' : 'text-zinc-500'%>">
        <%=
          r.label
        %>
      </div>
    </div>
    <div class="text-blue-600 text-base font-semibold">
      Edit
    </div>
  </div>
  <% if r != @reasons.last%>
    <div class="border border-neutral-200"></div>
  <% end %>
<% end %>
