<div data-controller='modal'>
  <div class="fixed inset-0 bg-black bg-opacity-70" data-modal-target="overlay" hidden></div>

  <dialog data-modal-target='modal' data-action="turbo:frame-load->modal#show">
    <div class="fixed inset-0" >
      <div class="flex min-h-full items-end justify-center items-center">
        <div class="relative overflow-hidden rounded-xl bg-white text-left shadow-xl transition-all w-[720px] p-4">
          <div class="absolute right-0 top-0 hidden pr-4 pt-4 sm:block">
            <button type="button" data-action="modal#hide">
              <span class="sr-only">Close</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none">
                <g stroke="#444" stroke-linecap="square" stroke-miterlimit="10" stroke-width="2"><path d="M21.334 10.666 10.667 21.333M21.334 21.333 10.667 10.666"/></g>
              </svg>
            </button>
          </div>
          <%= turbo_frame_tag "modal" %>
        </div>
      </div>
    </div>
  </dialog>
</div>
